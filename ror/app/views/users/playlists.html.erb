<div id = "rwarp" class="col-lg-11  ">

	<div class="row">
		<div class="col-md-6">
			<h3>Playlist</h3>
			
			<% if @user == current_user %>
			<%= form_for(@newlist, url: playlists_url )do |f| %>
				<div class="field f_left">
					<%= f.text_field :ltitle %>
				</div>

				<div class="actions ">
					<%= f.submit %>
				</div>
			<% end %>
			<% end %>
			<table>
				<tr>
					<th>List Name</th>
					<th>Created on</th>
					<% if @user == current_user %>
						<th>Delete</th>
					<%end%>
				</tr>

				<% @playlists.where( lpublic: true ).each do |l|%>
					<tr>
						<td><a href="<%=playlist_path(l)%>">
								<%=l.ltitle %>
							</a></td>
						<td><%=l.ldate.strftime "%m/%d/%Y %I:%M%p"%></td>
						<% if @user == current_user %>
							<td><%= link_to 'Delete', playlist_path(l), method: :delete %></td>
						<%end%>
					<tr>
				<% end%>
			</table>
		</div>
	</div>
</div>

